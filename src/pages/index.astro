</Layout>

<!-- Global Parallax Script -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Enhanced Global Parallax System
    const parallaxConfig = {
      // Hero Section
      hero: [
        { element: '.hero-bg-1', speed: 0.2, rotation: 0.01, scale: 0.05 },
        { element: '.hero-bg-2', speed: -0.15, rotation: -0.008, scale: -0.03 },
        { element: '.hero-bg-3', speed: 0.25, rotation: 0.012, scale: 0.02 },
        { element: '.hero-shape-1', speed: 0.3, rotation: 0.015 },
        { element: '.hero-shape-2', speed: -0.2, rotation: -0.01 },
        { element: '.parallax-content', speed: 0.1 },
        { element: '.parallax-scroll-indicator', speed: 0.05 }
      ],
      // About Section
      about: [
        { element: '.about-bg-1', speed: 0.15, rotation: 0.005 },
        { element: '.about-bg-2', speed: -0.1, rotation: -0.003 },
        { element: '.about-text', speed: 0.05 },
        { element: '.about-stats', speed: 0.08 }
      ]
    };

    // Hero particles animation
    const heroParticles = document.querySelectorAll('.hero-particle');
    
    const handleGlobalParallax = () => {
      const scrolled = window.pageYOffset;
      const windowHeight = window.innerHeight;
      
      // Apply hero parallax
      parallaxConfig.hero.forEach(({ element, speed, rotation, scale }) => {
        const el = document.querySelector(element);
        if (el) {
          const yPos = scrolled * speed;
          const rotateZ = rotation ? scrolled * rotation : 0;
          const scaleValue = scale ? 1 + (scrolled * scale) : 1;
          
          el.style.transform = `translate3d(0, ${yPos}px, 0) rotate(${rotateZ}deg) scale(${scaleValue})`;
        }
      });
      
      // Animate hero particles
      heroParticles.forEach((particle, index) => {
        const speed = 0.05 + (index * 0.02);
        const xOffset = Math.sin(scrolled * 0.001 + index * 0.5) * 100;
        const yOffset = scrolled * speed;
        const opacity = Math.max(0.1, 0.4 - (scrolled * 0.001));
        
        particle.style.transform = `translate3d(${xOffset}px, ${yOffset}px, 0)`;
        particle.style.opacity = opacity.toString();
      });
      
      // About section parallax
      const aboutSection = document.querySelector('#about');
      if (aboutSection) {
        const rect = aboutSection.getBoundingClientRect();
        if (rect.top < windowHeight && rect.bottom > 0) {
          parallaxConfig.about.forEach(({ element, speed, rotation }) => {
            const el = document.querySelector(element);
            if (el) {
              const yPos = scrolled * speed;
              const rotateZ = rotation ? scrolled * rotation : 0;
              el.style.transform = `translate3d(0, ${yPos}px, 0) rotate(${rotateZ}deg)`;
            }
          });
        }
      }
    };

    // Smooth scrolling with RAF
    let ticking = false;
    const onScroll = () => {
      if (!ticking) {
        requestAnimationFrame(() => {
          handleGlobalParallax();
          ticking = false;
        });
        ticking = true;
      }
    };

    window.addEventListener('scroll', onScroll);
    handleGlobalParallax(); // Initial call

    // Enhanced scroll animations for elements coming into view
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const scrollObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
        }
      });
    }, observerOptions);

    // Observe elements for scroll animations
    document.querySelectorAll('.about-text, .about-stats, article').forEach(el => {
      scrollObserver.observe(el);
    });
  });
</script>

<style>
  /* Hero Animations */
  .hero-title {
    animation: slideInUp 1s ease-out 0.2s both;
  }
  
  .hero-subtitle {
    animation: slideInUp 1s ease-out 0.4s both;
  }
  
  .hero-description {
    animation: slideInUp 1s ease-out 0.6s both;
  }
  
  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Hero Background Positioning */
  .hero-bg-1 {
    top: 20%;
    left: -10%;
    animation: heroFloat 30s ease-in-out infinite;
  }
  
  .hero-bg-2 {
    top: 60%;
    right: -5%;
    animation: heroFloat 25s ease-in-out infinite reverse;
    animation-delay: -8s;
  }
  
  .hero-bg-3 {
    bottom: 30%;
    left: 30%;
    animation: heroFloat 35s ease-in-out infinite;
    animation-delay: -15s;
  }

  .hero-shape-1 {
    top: 40%;
    left: 60%;
    animation: heroFloat 20s ease-in-out infinite;
    animation-delay: -5s;
  }
  
  .hero-shape-2 {
    top: 70%;
    right: 40%;
    animation: heroFloat 28s ease-in-out infinite reverse;
    animation-delay: -12s;
  }

  /* Hero Particles */
  .hero-particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .hero-particle {
    position: absolute;
    background: linear-gradient(45deg, #06b6d4, #8b5cf6, #ec4899);
    border-radius: 50%;
    opacity: 0.2;
    animation: heroParticleFloat 20s ease-in-out infinite;
  }

  .hero-particle-1 { width: 3px; height: 3px; top: 15%; left: 15%; animation-delay: 0s; }
  .hero-particle-2 { width: 5px; height: 5px; top: 25%; right: 25%; animation-delay: -4s; }
  .hero-particle-3 { width: 2px; height: 2px; top: 45%; left: 40%; animation-delay: -8s; }
  .hero-particle-4 { width: 4px; height: 4px; top: 65%; right: 15%; animation-delay: -12s; }
  .hero-particle-5 { width: 6px; height: 6px; top: 35%; left: 70%; animation-delay: -16s; }
  .hero-particle-6 { width: 3px; height: 3px; top: 75%; left: 20%; animation-delay: -2s; }
  .hero-particle-7 { width: 4px; height: 4px; top: 55%; right: 60%; animation-delay: -6s; }
  .hero-particle-8 { width: 5px; height: 5px; top: 85%; right: 30%; animation-delay: -10s; }

  @keyframes heroFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg) scale(1); }
    33% { transform: translateY(-40px) rotate(3deg) scale(1.1); }
    66% { transform: translateY(20px) rotate(-2deg) scale(0.9); }
  }

  @keyframes heroParticleFloat {
    0%, 100% { transform: translateY(0px) translateX(0px); opacity: 0.2; }
    25% { transform: translateY(-80px) translateX(30px); opacity: 0.4; }
    50% { transform: translateY(-40px) translateX(-20px); opacity: 0.3; }
    75% { transform: translateY(-120px) translateX(40px); opacity: 0.5; }
  }

  /* About Section Background */
  .about-bg-1 {
    top: 20%;
    right: -10%;
    animation: aboutFloat 25s ease-in-out infinite;
  }
  
  .about-bg-2 {
    bottom: 20%;
    left: -5%;
    animation: aboutFloat 30s ease-in-out infinite reverse;
    animation-delay: -10s;
  }

  @keyframes aboutFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-30px) rotate(5deg); }
  }

  /* Scroll Animation Classes */
  .about-text,
  .about-stats {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .about-text.animate-in,
  .about-stats.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  .about-stats.animate-in {
    transition-delay: 0.2s;
  }

  /* Text clipping for better readability */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Performance optimizations */
  .parallax-layer-1,
  .parallax-layer-2,
  .parallax-layer-3,
  .hero-particle,
  .parallax-content {
    will-change: transform;
    backface-visibility: hidden;
    transform-style: preserve-3d;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-bg-1,
    .hero-bg-2,
    .hero-bg-3,
    .hero-shape-1,
    .hero-shape-2 {
      opacity: 0.3;
      transform: scale(0.7);
    }
    
    .hero-particle {
      opacity: 0.1;
    }
  }
</style>
