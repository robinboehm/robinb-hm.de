---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import ParallaxTimeline from '../components/ParallaxTimeline.astro';
import { getCollection } from 'astro:content';

// Import global styles
import '../styles/global.css';

const blogEntries = await getCollection('blog');
const featuredBlogPosts = blogEntries.filter(post => post.data.featured).slice(0, 3);
---

<Layout title="Robin Böhm - Community Architect & Tech Visionary">
  <Navigation />
  
  <!-- Hero Section with Enhanced Parallax -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Multi-layer Parallax Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950">
      <!-- Layer 1: Far Background -->
      <div class="parallax-layer-1 absolute inset-0">
        <div class="hero-bg-1 absolute w-96 h-96 bg-gradient-to-r from-cyan-500/8 to-blue-500/8 rounded-full blur-3xl"></div>
        <div class="hero-bg-2 absolute w-80 h-80 bg-gradient-to-r from-purple-500/6 to-pink-500/6 rounded-full blur-3xl"></div>
        <div class="hero-bg-3 absolute w-72 h-72 bg-gradient-to-r from-indigo-500/10 to-cyan-500/10 rounded-full blur-3xl"></div>
      </div>
      
      <!-- Layer 2: Mid Background -->
      <div class="parallax-layer-2 absolute inset-0">
        <div class="hero-shape-1 absolute w-64 h-64 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-full blur-2xl"></div>
        <div class="hero-shape-2 absolute w-56 h-56 bg-gradient-to-r from-cyan-500/7 to-indigo-500/7 rounded-full blur-2xl"></div>
